generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Empresa {
  id       Int       @id @default(autoincrement())
  nome     String
  cnpj     String    @unique
  telefone String
  email    String
  Usuarios  Usuario[]

  @@map("empresas")
}

model Usuario {
  id        Int        @id @default(autoincrement())
  nome      String
  email     String     @unique
  senha     String
  empresa   Empresa?   @relation(fields: [empresaId], references: [id])
  empresaId Int?
  Registros  Registro[]

  @@map("usuarios")
}

model Registro {
  id        Int      @id @default(autoincrement())
  data      DateTime @default(now())
  entrada   Boolean
  editado   Boolean  @default(false)
  latitude  Float?
  longitude Float?
  Usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int

  @@map("registros")
}
