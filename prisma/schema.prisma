generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Empresa {
  id       Int       @id @default(autoincrement())
  nome     String
  cnpj     String    @unique
  telefone String
  email    String
  Usuario  Usuario[]

  @@map("empresas")
}

model Usuario {
  id        Int     @id @default(autoincrement())
  nome      String
  email     String  @unique
  senha     String
  empresa   Empresa? @relation(fields: [empresaId], references: [id])
  empresaId Int?

  @@map("usuarios")
}
